{
  "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": [
        "es2020",
        "ESNext"
      ],
      "outDir": "dist",
      "declaration": true,
      "allowJs": true,
      "sourceMap": true,
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
      },
      "include": ["**/*.ts"],
      "exclude": ["spec","node_modules","dist", "webpack.config.js"]
  }